{
  "name": "zksync-sso-oidc-server",
  "tags": ["type:package"],
  "targets": {
    "dev:salt": {
      "executor": "nx:run-script",
      "options": {
        "script": "dev:salt"
      }
    },
    "dev:key-registry": {
      "executor": "nx:run-script",
      "options": {
        "script": "dev:key-registry"
      }
    },
    "dev:all": {
      "executor": "nx:run-script",
      "dependsOn": ["zksync-sso-contracts:deploy"],
      "options": {
        "cwd": "packages/oidc-server",
        "commands": [
          {
            "command": "tsx src/index.ts"
          },
          {
            "command": "pnpm run dev:salt"
          }
        ]
      }
    }
  }
}
