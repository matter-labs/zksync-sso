# =============================================================================
# ZKsync SSO Demo - Unified Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# This single .env file will be used by all components

# -----------------------------------------------------------------------------
# Private Keys
# -----------------------------------------------------------------------------

# Deployer/Executor private key (used by bundler, relayer, and wallet app)
# This account should have ETH on:
# - L1 (Sepolia) for L2-to-L1 finalization
# - L2 (ZKsync OS testnet) for bundler operations and account deployment
DEPLOYER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Interop private key for local chain interop transactions
# This should be a rich wallet account with funds on local chains (ports 3050 & 3051)
# Default: Anvil's first rich account - you can keep this as-is for local testing
INTEROP_PRIVATE_KEY=0x7726827caac94a7f9e1b160f7ea819f172f7b6f9d2a97f992c38edeab82d4110

# -----------------------------------------------------------------------------
# RPC URLs
# -----------------------------------------------------------------------------

# L2 (ZKsync OS Developer Preview)
L2_RPC_URL=https://zksync-os-testnet-alpha.zksync.dev/

# L1 (Sepolia)
# Get your API key from: https://www.alchemy.com/
L1_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY_HERE

# Local chains for interop testing (default ports)
CHAIN_A_RPC=http://localhost:3050
CHAIN_B_RPC=http://localhost:3051

# -----------------------------------------------------------------------------
# Contract Addresses (ZKsync OS Testnet)
# -----------------------------------------------------------------------------

# L2 Interop Center
L2_INTEROP_CENTER=0xc64315efbdcD90B71B0687E37ea741DE0E6cEFac

# L1 Interop Handler
L1_INTEROP_HANDLER=0xB0dD4151fdcCaAC990F473533C15BcF8CE10b1de

# -----------------------------------------------------------------------------
# Service Configuration
# -----------------------------------------------------------------------------

# Bundler port
BUNDLER_PORT=4337

# Relayer status server port
RELAYER_STATUS_PORT=4340

# Wallet app port
WALLET_APP_PORT=3000

# Relayer polling interval (in milliseconds)
POLL_INTERVAL=30000

# Finalization wait time (in milliseconds) - 15 minutes
FINALIZATION_WAIT=900000

# -----------------------------------------------------------------------------
# Token Configuration (Auto-populated by deploy-usd.sh)
# -----------------------------------------------------------------------------

# USD Test Token address on Chain A (deployed via deploy-usd.sh)
# This will be automatically set when you run the token deployment script
# VITE_TOKEN_ADDRESS=
