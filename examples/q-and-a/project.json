{
  "name": "q-and-a",
  "tags": ["type:app"],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "commands": [
          {
            "command": "pnpm nx dev auth-server",
            "prefix": "Auth-Server:"
          },
          {
            "command": "PORT=3006 pnpm nuxt dev",
            "prefix": "Q&A:"
          }
        ]
      },
      "dependsOn": ["q-and-a-contracts:deploy:local"]
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "command": "pnpm nuxt generate"
      },
      "dependsOn": ["^build"]
    },
    "build:local": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "commands": [
          {
            "command": "pnpm nuxt generate --envName local",
            "prefix": "Q&A:"
          },
          {
            "command": "pnpm nx deploy:local q-and-a-contracts",
            "prefix": "q-and-a-Contracts:"
          }
        ]
      },
      "dependsOn": ["^build"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "commands": [
          {
            "command": "pnpm nx preview auth-server",
            "prefix": "Auth-Server:"
          },
          {
            "command": "PORT=3006 pnpm nuxt preview",
            "prefix": "Q&A:"
          }
        ]
      },
      "dependsOn": ["build:local"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "command": "firebase deploy --only hosting:q-and-a-testnet --project q-and-a-testnet"
      },
      "dependsOn": ["build"]
    },
    "deploy:preview": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "command": "firebase hosting:channel:deploy --only q-and-a-testnet --project q-and-a-testnet"
      },
      "dependsOn": ["build"]
    },
    "e2e:setup": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "command": "pnpm exec playwright install chromium"
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "command": "playwright test"
      },
      "dependsOn": ["e2e:setup"]
    },
    "e2e:debug": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "command": "playwright test --ui"
      },
      "dependsOn": ["e2e:setup"]
    },
    "show-report": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/q-and-a",
        "command": "playwright show-report"
      }
    }
  }
}
