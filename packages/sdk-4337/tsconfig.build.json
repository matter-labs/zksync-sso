      "zksync-sso-web-sdk/node": ["../sdk-platforms/web/dist/node.d.ts"],
      "zksync-sso/paymaster": ["../../node_modules/zksync-sso/dist/_types/paymaster/index.d.ts"],
      "zksync-sso/paymaster/*": ["../../node_modules/zksync-sso/dist/_types/paymaster/*"]
    },
    "sourceMap": true,
    "rootDir": "./src"
  }
}
